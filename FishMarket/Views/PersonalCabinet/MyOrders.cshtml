@model  IEnumerable<FishMarket.ViewModels.OrderViewModel>

    <body>
        <h3>Мои заказы</h3>
        @{
            foreach (var item in Model)
            {
                if (item.Email == User.Identity.Name)
                {
                    <div class="row mt-5 mb-2">

                        <div class="col-lg-4">
                            <h3>@item.ProductName</h3>
                            <p>Цена: @Convert.ToInt32(Convert.ToDouble(item.Price) * Convert.ToDouble(item.Count)) грн</p>
                            <p>Цена за 1 @item.unit: @item.Price грн</p>
                            <p>Количество @item.unit: @item.Count</p>
                        </div>
                    </div>
                }
            }
        }
    </body>