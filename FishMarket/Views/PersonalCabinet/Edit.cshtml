@model FishMarket.ViewModels.ShoppingBasketViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
    <form asp-action="Edit" asp-controller="PersonalCabinet">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
        </div>

        <div class="form-group">
            <label asp-for="Count" class="control-label">Количество</label>
            <input type="text" asp-for="Count" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>